pipeline {
  agent {label 'jenkins-agent'}
  tools {
    jdk 'java17'
    maven 'maven'
  }
  stages {
    stage("cleanup-workspace") {
      steps {
        cleanWs()
      }
    }
    stage('checkout-from-scm') {
      steps {
        git branch: 'main', credentials_id: 'github', url: 'https://github.com/akashsakore/register-app.git' 
      }
    }
    stage('buils-application') {
      steps {
        sh 'mvn clean package'
      }
    }
    stage('mvn-test') {
      steps {
          sh 'mvn test'
      }
    }
  }
}
